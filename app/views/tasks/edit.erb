<h4>Edit Your Task: <%= @task.name.capitalize %></h4>
<h4><%= @task.content %></h4>
<% unless locals.empty? %>
<%= message %>
<% end %>

<form action="/tasks/<%= @task.id %>" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">
<label for="name">Task Name: </label>
<input type="text" name="name" value="<% @task.name %>" placeholder="name">
<br>
<label for="content">Task Content: </label>
<br>
<textarea name="content"></textarea>
<br>
<input class="button hidden" type="submit" value="Update" name="commit" />
</form>
